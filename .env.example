# Environment variables for Pulsar Interactive Docker Compose
# Copy this file to .env and modify the values as needed

# =============================================================================
# GENERAL SETTINGS
# =============================================================================
NODE_ENV=production
COMPOSE_PROJECT_NAME=pulsar-interactive

# =============================================================================
# PULSAR BACKEND CONFIGURATION
# =============================================================================
# Port for Pulsar backend service
PULSAR_PORT=3000

# Database configuration
HAS_DB=true

# PostgreSQL Database Settings
DB_NAME=pulsar
DB_USER=pulsar_user
DB_PASS=pulsar_pass
DB_PORT=5432

# For Railway deployment, these will be overridden by Railway's PostgreSQL service
# DATABASE_URL will be automatically provided by Railway

# Add other Pulsar-specific environment variables here
# PULSAR_LOG_LEVEL=info
# PULSAR_JWT_SECRET=your-jwt-secret-here
# PULSAR_RATE_LIMIT_WINDOW=15
# PULSAR_RATE_LIMIT_MAX=100

# =============================================================================
# PLANET FRONTEND CONFIGURATION
# =============================================================================
# Port for Planet frontend service (nginx)
PLANET_PORT=80

# API URLs for frontend configuration
VITE_API_BASE_URL=http://localhost:3000
VITE_WEBSOCKET_URL=http://localhost:3000

# For production deployment, use actual domain:
# VITE_API_BASE_URL=https://api.pulsarinteractive.xyz
# VITE_WEBSOCKET_URL=https://api.pulsarinteractive.xyz

# =============================================================================
# PLANET CONFIGURATION VARIABLES (for config.yml generation)
# =============================================================================
# These variables will be substituted into the Planet config.yml file

# Layout configuration
PLANET_HEADER_ENABLED=true
PLANET_FOOTER_ENABLED=true
PLANET_LEFT_SIDEBAR_ENABLED=true
PLANET_RIGHT_SIDEBAR_ENABLED=true

# Feature toggles
PLANET_CHAT_ENABLED=true
PLANET_HEALTH_CHECK_ENABLED=true
PLANET_HEALTH_CHECK_INTERVAL=30000

# UI configuration
PLANET_COLOR_MODE=system

# Debug configuration
PLANET_DEBUG_PANEL_ENABLED=true
PLANET_CONFIG_VIEWER_ENABLED=true

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# Uncomment and modify these for production deployment

# PLANET_PORT=443
# NODE_ENV=production
# VITE_API_BASE_URL=https://api.pulsarinteractive.xyz
# VITE_WEBSOCKET_URL=https://api.pulsarinteractive.xyz

# =============================================================================
# DEVELOPMENT OVERRIDES
# =============================================================================
# Uncomment these for development mode

# NODE_ENV=development
# PULSAR_PORT=3000
# PLANET_PORT=5173
# VITE_API_BASE_URL=http://localhost:3000
# VITE_WEBSOCKET_URL=http://localhost:3000