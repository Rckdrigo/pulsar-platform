# Development Dockerfile for Satellite MCP Server
# This includes dev dependencies for running TypeScript directly

FROM node:22-alpine

WORKDIR /app

# Install development tools
RUN apk add --no-cache curl wget

# Copy package files
COPY package*.json ./
COPY tsconfig.json ./

# Install ALL dependencies (including dev dependencies)
RUN npm ci

# Copy source code
COPY src ./src

# Create non-root user for security
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nodejs -u 1001 && \
    chown -R nodejs:nodejs /app

USER nodejs

# Set environment defaults for development
ENV NODE_ENV=development \
    TRANSPORT_MODE=http \
    HTTP_PORT=33000

# Expose port
EXPOSE ${HTTP_PORT:-33000}

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://localhost:${HTTP_PORT:-33000}/health || exit 1

# Start with tsx for ESM TypeScript support
# tsx properly handles .js import extensions in TypeScript ESM modules
CMD ["node_modules/.bin/tsx", "src/server.ts"]
