{
  "name": "mcp-server",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "npx @modelcontextprotocol/inspector ts-node src/server.ts",
    "dev:stdio": "npx @modelcontextprotocol/inspector npx ts-node --env-file=.env src/server.ts",
    "dev:http": "npx @modelcontextprotocol/inspector npx ts-node --env-file=.env src/server.ts http",
    "dev:http:docker": "npx ts-node --env-file=.env src/server.ts http",
    "start:stdio": "node dist/server.js",
    "start:http": "TRANSPORT_MODE=http node dist/server.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "config:sync": "npx tsx scripts/sync-mcp-config.ts",
    "config:sync:apply": "npx tsx scripts/sync-mcp-config.ts --apply",
    "config:check": "npx tsx scripts/sync-mcp-config.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "axios": "^1.9.0",
    "dotenv": "^16.0.0",
    "glob": "^11.0.3",
    "typescript": "^5.0.4",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.0.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^30.0.0-beta.3",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.1",
    "tsx": "^4.20.6"
  }
}
